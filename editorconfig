# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
indent_size = 4

[*.html]
indent_size = 2

[*.json]
indent_size = 2
insert_final_newline = ignore

# django's admin
[**/admin/js/vendor/**]
indent_style = ignore
indent_size = ignore

# do not touch minified JavaScript
[**.min.js]
indent_style = ignore
insert_final_newline = ignore

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab

[docs/**.txt]
max_line_length = 79

[*.yml]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

